@using Contentful.Core.Models
@model ContentfulCollection<Cat>

@{
    ViewData["Title"] = "Cat Info";
}

<h1 class="mb-4">Different Cat Breeds</h1>
<div class="row">
    @foreach (var cat in Model){
        <div class="col-xs-12 col-sm-8 col-md-6">
            <div class="card border-secondary mb-5" style="width: 22rem; box-shadow: 5px 5px 20px;">
                <img class="card-img-top img-fluid" src="@cat.Image.File.Url" alt="@cat.Image.Title" height="200px">
                <div class="card-body">
                    <h4 class="card-title">@cat.Breed</h4>
                    <p class="card-text" style="text-align: justify;">@cat.Description</p>
                </div>
            </div>
        </div>
    }
</div>
